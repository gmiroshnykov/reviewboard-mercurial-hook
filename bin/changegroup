#!/usr/bin/env node
var app = require('..');

['RT_BUG', 'RT_USERNAME', 'RT_PASSWORD', 'HG_NODE'].forEach(function(key) {
  if (!process.env[key]) {
    console.error('ERROR: %s not set', key);
    process.exit(1);
  }
});

var auth = {
  username: process.env.RT_USERNAME,
  password: process.env.RT_PASSWORD
};
var bugId = process.env.RT_BUG;
var node = process.env.HG_NODE;

return app.processChangegroup(auth, bugId, node, function(err, parentReviewRequest) {
  if (err) throw err;

  console.log('Review Request:', parentReviewRequest.absolute_url);
});
